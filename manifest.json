{
  "manifest_version": 2,

  "name": "Neopets DreamTheme",
  "description": "Allows you to use any of the official Neopets themes without having to unlock them.",
  "version": "1.0",

  "permissions": [
    "storage",
    "tabs"
  ],

  "background": {
    "scripts": [
      "js/jquery.js",
      "js/background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.neopets.com/*"
      ],
      "js": [
        "js/jquery.js",
        "js/content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "page_action": {
    "default_title": "Neopets DreamTheme",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "web_accessible_resources": [
    "data/rotations.json",
    "img/themes/*",
    "css/themes/*"
  ]
}
